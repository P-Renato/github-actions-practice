{
  "name": "github-actions-practice",
  "version": "1.0.0",
  "description": "MERN project with TypeScript and Bun",
  "main": "dist/server.js",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run dist/server.js",
    "dev": "bun run --watch src/server.ts",
    "build": "bun build ./src/server.ts --outdir ./dist --target node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit",
    "lint": "bunx eslint src/ tests/",
    "clean": "rm -rf dist coverage"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "supertest": "^7.2.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}